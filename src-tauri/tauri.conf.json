{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "tauridesktop",
    "version": "0.1.0",
    "identifier": "com.tauridesktop.app",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },

    "app": {
        "windows": [
            {
                "transparent": true,
                "title": "shabang",
                "width": 800,
                "height": 600,
                "fullscreen": false,
                "maximized": false,
                "resizable": false,
                "alwaysOnTop": true,
                "decorations": false,
                "shadow": false
            }
        ],

        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.ico"
        ]
    }
}
